<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLife"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lasters">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lasters" />

    <TextView
        android:text="Åžarj Oluyor"
        android:id="@+id/statusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:textColor="@color/green"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/bateryStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textColor="@color/green"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/bateryy_status"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/batery_statusl" />


    <ImageView
        android:id="@+id/volume"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/volume_on" />


    <ImageView
        android:id="@+id/imageFlashlight"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:background="@drawable/on_back"
        android:src="@drawable/switch_offff" />

    <ImageView
        android:layout_marginTop="300dp"
        android:id="@+id/imageFrontLight"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/loff_back"
        android:src="@drawable/switch_offff" />





    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-9461341218136896/6947160227">

    </com.google.android.gms.ads.AdView>




</RelativeLayout>